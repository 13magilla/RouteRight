<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="asmagill.routeright.port_forward_main"
    tools:showIn="@layout/activity_port_forward_main"
    android:background="#ad2929">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose your Device"
        android:id="@+id/chooseDevice"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/chooseDevice"
        android:layout_alignParentEnd="true">

        <TableRow>
            <Button
                android:layout_column="1"
                android:text="Cisco"
                android:padding="3dip"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#cb4545" />
        </TableRow>

        <TableRow>
            <Button
                android:layout_column="1"
                android:text="Linksys"
                android:padding="3dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#6e1616" />
        </TableRow>

        <TableRow>
            <Button
                android:layout_column="1"
                android:text="Netgear"
                android:padding="3dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#cb4545" />
        </TableRow>

        <TableRow>
            <Button
                android:layout_column="1"
                android:text="Asus"
                android:padding="3dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#6e1616" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="41dp">

        <TableRow>
            <Button
                android:layout_column="1"
                android:text="Basic"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#ffffff"
                android:background="#cb4545"
                android:onClick="sendBasic" />
            <Button
                android:text="PortFor"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#ffffff"
                android:id="@+id/portFor"
                android:background="#6e1616" />
            <Button
                android:text="Search"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#ffffff"
                android:id="@+id/search"
                android:background="#cb4545"
                android:onClick="sendSearch" />
            <Button
                android:text="Tools"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#ffffff"
                android:id="@+id/tools"
                android:background="#6e1616" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
